<!DOCTYPE html>
<html lang="en">

<%- include('./partials/header.ejs') %> 

  <main id="main">

    <!-- ======= Services Section ======= -->
    <section id="services" class="services">
      <div class="container" data-aos="fade-up">

        <div class="section-title">
          <h2>Updating Existing News</h2>
         
        </div>
        
        <form action="/update/" method="post">
          <div class="form-row">
            <div class="col-md-12 form-group">
              <input type="text" name="author" data-rule="required" class="form-control" id="author" placeholder="Author Name"/>
              <div class="validate"></div>
            </div>
          </div>
          <div class="form-row">
            <div class="col-md-6 form-group">
              <input type="text" name="url" class="form-control" id="url"  placeholder="URL"/>
              <div class="validate"></div>
            </div>
            <div class="col-md-6 form-group">
              <input type="text" name="language" class="form-control" id="language" placeholder="Language"/>
              <div class="validate"></div>
            </div>
          </div>
          <div class="form-group">
            <input type="text" class="form-control" data-rule="required" name="title" id="title" placeholder="Title" data-rule="minlen:8" data-msg="Please enter at least 8 chars of subject" />
            <div class="validate"></div>
          </div>
          <div class="form-group">
            <textarea class="form-control" id="text" name="text" rows="5" data-rule="required" data-msg="Please write something about the news" placeholder="Please write something about the news"><%= news.text %> </textarea>
            <div class="validate"></div>
          </div>
          <input type="text" name="uuid" id="uuid" hidden/>
          <div class="text-center"><button class="btn btn-success" type="submit">Update</button></div>

        </form>



      </div>
    </section><!-- End Services Section -->

  </main><!-- End #main -->


  <div id="preloader"></div>
  <a href="#" class="back-to-top"><i class="bx bx-up-arrow-alt"></i></a>

  <!-- Vendor JS Files -->
  <script>
    document.addEventListener("DOMContentLoaded", function(){
      var data = <%- news %>;
      document.getElementById("text").value = data.text;
      document.getElementById("language").value = data.language;
      document.getElementById("title").value = data.title;
      document.getElementById("author").value = data.author;
      document.getElementById("url").value = data.url;
    });
  </script>

  <script src="/assets/vendor/jquery/jquery.min.js"></script>
  <script src="/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="/assets/vendor/jquery.easing/jquery.easing.min.js"></script>
  <script src="/assets/vendor/php-email-form/validate.js"></script>
  <script src="/assets/vendor/waypoints/jquery.waypoints.min.js"></script>
  <script src="/assets/vendor/counterup/counterup.min.js"></script>
  <script src="/assets/vendor/owl.carousel/owl.carousel.min.js"></script>
  <script src="/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
  <script src="/assets/vendor/venobox/venobox.min.js"></script>
  <script src="/assets/vendor/aos/aos.js"></script>

  <!-- Template Main JS File -->
  <script src="/assets/js/main.js"></script>

</body>

</html>